{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "sourceMap": true,
    "outDir": "dist/npm",
    "declaration": true,
    "lib": ["esnext"],
    "incremental": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": ["src", "index"],
  "exclude": ["dist"]
}
